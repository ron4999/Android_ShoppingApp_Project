<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".ConfirmOrderActivity">

    <TextView
        android:id="@+id/txtConfirm"
        android:text="Vui lòng xác nhận thông tin giao hàng của bạn"
        android:textSize="20dp"
        android:textColor="@color/purple_500"
        android:layout_margin="15dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edtUserShipName"
        android:layout_below="@id/txtConfirm"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Tên"
        android:textSize="20dp"
        android:textColor="@color/purple_500"
        android:textColorHint="@color/purple_500"
        android:background="@drawable/input_design"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edtUserShipPhone"
        android:layout_below="@id/edtUserShipName"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Số điện thoại"
        android:textSize="20dp"
        android:textColor="@color/purple_500"
        android:textColorHint="@color/purple_500"
        android:background="@drawable/input_design"
        android:padding="20dp"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edtUserShipAddress"
        android:layout_below="@id/edtUserShipPhone"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Địa chỉ"
        android:textSize="20dp"
        android:textColor="@color/purple_500"
        android:textColorHint="@color/purple_500"
        android:background="@drawable/input_design"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edtUserShipCity"
        android:layout_below="@id/edtUserShipAddress"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Thành phố"
        android:textSize="20dp"
        android:textColor="@color/purple_500"
        android:textColorHint="@color/purple_500"
        android:background="@drawable/input_design"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnConfirmOrder"
        android:text="Xác nhận"
        android:textSize="20dp"
        android:background="@drawable/buttons"
        android:padding="20dp"
        android:textColor="#FFF"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>
