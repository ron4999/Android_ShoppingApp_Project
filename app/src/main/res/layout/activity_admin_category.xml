<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:id="@+id/app_slogan"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Thêm sản phẩm"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/purple_500"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/linear_category"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:layout_below="@id/app_slogan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivTshirt"
            app:srcCompat="@drawable/ic_tshirt"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

        <ImageView
            android:id="@+id/ivSport"
            app:srcCompat="@drawable/ic_sport"
            android:layout_marginLeft="5dp"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

        <ImageView
            android:id="@+id/ivDress"
            app:srcCompat="@drawable/ic_dress"
            android:layout_marginLeft="5dp"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

        <ImageView
            android:id="@+id/ivSweeter"
            app:srcCompat="@drawable/ic_sweeter"
            android:layout_marginLeft="5dp"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear1"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_below="@id/linear_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="TShirt"
            android:textSize="12dp"
            android:textColor="@color/purple_200"
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>


        <TextView
            android:text="Thể thao"
            android:textSize="12dp"
            android:textColor="@color/purple_200"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Váy"
            android:textSize="12dp"
            android:textColor="@color/purple_200"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Áo sweeter"
            android:textSize="12dp"
            android:textColor="@color/purple_200"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_category_2"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_below="@id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivGlasses"
            app:srcCompat="@drawable/ic_glasses"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

        <ImageView
            android:id="@+id/ivBag"
            app:srcCompat="@drawable/ic_bag"
            android:layout_marginLeft="5dp"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

        <ImageView
            android:id="@+id/ivHat"
            app:srcCompat="@drawable/ic_hat"
            android:layout_marginLeft="5dp"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

        <ImageView
            android:id="@+id/ivShoes"
            app:srcCompat="@drawable/ic_shoes"
            android:layout_marginLeft="5dp"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_below="@id/linear_category_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Kính"
            android:textSize="12dp"
            android:textColor="@color/purple_200"
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Túi xách"
            android:textSize="12dp"
            android:textColor="@color/purple_200"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Mũ"
            android:textSize="12dp"
            android:textColor="@color/purple_200"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Giày"
            android:textSize="12dp"
            android:textColor="@color/purple_200"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_category_3"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_below="@id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivHeadphone"
            app:srcCompat="@drawable/ic_headphone"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

        <ImageView
            android:id="@+id/ivLaptop"
            app:srcCompat="@drawable/ic_laptop"
            android:layout_marginLeft="5dp"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

        <ImageView
            android:id="@+id/ivWatch"
            app:srcCompat="@drawable/ic_watch"
            android:layout_marginLeft="5dp"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

        <ImageView
            android:id="@+id/ivMobile"
            app:srcCompat="@drawable/ic_mobile"
            android:layout_marginLeft="5dp"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_below="@id/linear_category_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Tai nghe"
            android:textSize="12dp"
            android:textColor="@color/purple_200"
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>


        <TextView
            android:text="Laptop"
            android:textSize="12dp"
            android:textColor="@color/purple_200"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Đồng hồ"
            android:textSize="12dp"
            android:textColor="@color/purple_200"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Điện thoại"
            android:textSize="12dp"
            android:textColor="@color/purple_200"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnAdminEditDelete"
        android:layout_above="@id/btnCheckOrders"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:text="Quản lý sản phẩm"
        android:fontFamily="serif"
        android:textColor="#FFF"
        android:background="@drawable/buttons"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>

    <Button
        android:id="@+id/btnCheckOrders"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:text="Kiểm tra đơn hàng"
        android:fontFamily="serif"
        android:textColor="#FFF"
        android:background="@drawable/buttons"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:layout_above="@id/btnAdminLogout"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>

    <Button
        android:id="@+id/btnAdminLogout"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/buttons"
        android:textAllCaps="false"
        android:text="Đăng xuất"
        android:textSize="20dp"
        android:fontFamily="serif"
        android:textColor="#FFF"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>

</RelativeLayout>